	<body>

		<!-- Wrapper -->
			<div id="wrapper">

				<!-- Header -->
					<header id="header">
						<div class="logo">
							<span class="icon"><img src="images/milkshakeIcon.png"/></span>
						</div>
						<div class="content">
							<div class="inner">
								<h1>Milkshake</h1>
								<p>Operations | Technology</p>
							</div>
						</div>
						<nav>
							<ul>
								<li><a href="#work">Work</a></li>
								<li><a href="#about">About</a></li>
								<li><a href="#contact">Contact</a></li>
							</ul>
						</nav>
